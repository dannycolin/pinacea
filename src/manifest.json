{
  "manifest_version": 3,
  "name": "Pinacea",
  "description": "A Pinned Tabs Manager",
  "author": "Danny Colin",
  "version": "0.4.0",
  "homepage_url": "https://github.com/dannycolin/pinacea",
  "browser_specific_settings": {
    "gecko": {
      "id": "pinacea@dannycolin.com",
      "strict_min_version": "101.0"
    }
  },
  "icons": {
    "48": "img/logo.svg",
    "96": "img/logo.svg"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "background": {
    "page": "html/background.html"
  },
  "commands": {
    "toggle-pin-tab": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "(un)pin tab"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
