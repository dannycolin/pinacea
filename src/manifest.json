{
  "manifest_version": 3,
  "name": "Pinacea",
  "description": "A Pinned Tabs Manager",
  "author": "Danny Colin",
  "version": "0.4.0",
  "homepage_url": "https://github.com/dannycolin/autopin",
  "browser_specific_settings": {
    "gecko": {
      "id": "pinacea@dannycolin.com",
      "strict_min_version": "101.0"
    }
  },
  "icons": {
    "48": "img/logo.svg",
    "96": "img/logo.svg"
  },
  "action": {
    "browser_style": false,
    "default_title": "Pinacea",
    "default_popup": "html/popup.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "background": {
    "page": "html/background.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
